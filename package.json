{
  "name": "autoupd-example",
  "version": "1.0.4",
  "description": "",
  "main": "src/main/index.js",
  "scripts": {
    "start": "ELECTRON_IS_DEV=1 electron .",
    "dev": "ELECTRON_IS_DEV=1 electron-webpack dev",
    "clean": "rm -rf dist",
    "compile": "yarn clean && electron-webpack",
    "dist:linux": "yarn compile && electron-builder --linux",
    "dist": "yarn compile && electron-builder --win",
    "dist:dir": "yarn dist --dir -c.compression=store -c.mac.identity=null --linux",
    "dist:dir32": "yarn dist:dir --ia32"
  },
  "author": "Rafael Pereira",
  "license": "ISC",
  "dependencies": {
    "electron-is-dev": "^1.1.0",
    "electron-log": "^4.0.7",
    "electron-updater": "^4.0.6",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "source-map-support": "^0.5.12"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.8.3",
    "electron": "4.2.11",
    "electron-builder": "^21.0.11",
    "electron-webpack": "^2.7.4",
    "webpack": "~4.35.3"
  },
  "build": {
    "appId": "autoupd-example",
    "compression": "store",
    "asar": true,
    "asarUnpack": [
      "./static"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "static/img/tux.ico"
    },
    "nsis": {
      "perMachine": true
    },
    "publish": [
      {
        "provider": "generic",
        "url": "http://127.0.0.1:8080/"
      }
    ]
  }
}
